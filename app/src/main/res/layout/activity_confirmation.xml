<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".activities.ConfirmationActivity">

    <LinearLayout
        android:id="@+id/ticket_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 🎉 Confirmation Header -->
        <TextView
            android:id="@+id/text_view_confirmation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎉 Booking Confirmed!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#10B981"
            android:gravity="center"
            android:layout_marginBottom="24dp" />


        <!-- Booking Reference Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/colorPrimary">

            <TextView
                android:id="@+id/text_view_booking_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Reference: SKY123456"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="20dp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <!-- 💺 Flight Details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✈️ Flight Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_view_flight_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flight details will appear here"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 👤 Passenger Details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👤 Passenger Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_view_passenger_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Passenger details will appear here"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 🎫 Ticket Details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🎫 Ticket Details"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/text_view_ticket_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ticket details will appear here"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 🚀 Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_view_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share Ticket Summary"
                android:textColor="@color/textPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                android:elevation="4dp"
                android:padding="14dp" />

            <Button
                android:id="@+id/button_back_to_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="← Back to Home"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@android:color/transparent"
                android:background="@drawable/button_outline_background"
                android:padding="14dp"/>

            <Button
                android:id="@+id/button_save_ticket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Ticket as Image"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="16dp"
                android:padding="10dp"
                android:backgroundTint="@android:color/transparent" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
