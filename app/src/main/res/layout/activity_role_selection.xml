<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/background_sky_go"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="-40dp"/>

    <TextView
        android:id="@+id/textViewTagline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your next adventure starts here, one app for every destination"
        android:textColor="@android:color/white"
        android:textSize="27sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@id/buttonUserLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Login as Admin Button -->
    <Button
        android:id="@+id/buttonAdminLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Login as Admin"
        android:textColor="@color/colorPrimary"
        android:backgroundTint="@color/buttonPrimary"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Login as User Button -->
    <Button
        android:id="@+id/buttonUserLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Login as User"
        android:textColor="@color/colorPrimary"
        android:backgroundTint="@color/buttonPrimary"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/buttonAdminLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
